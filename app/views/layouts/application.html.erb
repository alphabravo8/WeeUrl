<!DOCTYPE html>
<html>
<head>
  <title>WeeUrl</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:slug].present? %>
  <p class='shortened-link'>
    Your WeeUrl is now available <%= link_to display_wee_url(flash[:slug]), display_wee_url(flash[:slug]), target: "_blank" %>
  </p>
<% end %>

<%= yield %>

</body>
</html>
