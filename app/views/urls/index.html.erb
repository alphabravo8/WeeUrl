<h1>URLs List</h1>
  <table>
    <thead>
      <tr>
        <th>Real url</th>
        <th>Wee Url</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @url.each do |u| %>
        <tr>
          <td><%= u.url %></td>
          <td><%= link_to display_wee_url(u.slug.to_s), display_wee_url(u.slug.to_s), target: '_blank' %></td>
          <td><%= link_to 'Show', display_wee_url(u.slug.to_s), target: '_blank' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>